{
  "name": "hookedjs",
  "author": "Brian Dombrowski <bdombro@gmail.com>",
  "version": "0.0.4",
  "license": "ISC",
  "private": true,
  "scripts": {
    "update:hard": "npx ncu -u && yarn && yarn upgrade",
    "update:hard-all": "lerna run --parallel upgrade-hard",
    "bootstrap": "lerna bootstrap && yarn dotenv:generate && lerna run --parallel --ignore hookedjs bootstrap",
    "dotenv:generate": "dotenvi -s ${APP_ENV:-development}",
    "build": "lerna run --parallel --ignore hookedjs build",
    "start": "lerna run --parallel --ignore hookedjs start",
    "start:dev": "lerna run --parallel --ignore hookedjs start:dev",
    "test": "lerna run --parallel --ignore hookedjs test",
    "clean": "lerna run --parallel --ignore hookedjs clean",
    "prettier": "prettier ./services/*/src/**/*.ts --write",
    "lint": "tslint --fix -t stylish -c ./tslint.json -p ./tsconfig.json"
  },
  "engineStrict": true,
  "engines": {
    "node": ">12.0.0",
    "npm": ">9999.0.0",
    "yarn": ">=1.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/generated/*"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^8.0.0",
    "dotenv-cli": "^2.0.0",
    "dotenvi": "^0.6.0",
    "husky": "^2.2.0",
    "lerna": "^3.13.2",
    "lint-staged": "^8.2.1",
    "prettier": "^1.16.4",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.4.5",
    "typestrict": "^1.0.2"
  }
}
