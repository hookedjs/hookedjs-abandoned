{
  "name": "hookedjs",
  "author": "Brian Dombrowski <bdombro@gmail.com>",
  "version": "0.0.2",
  "license": "ISC",
  "private": false,
  "scripts": {
    "update:hard": "npx ncu -u && yarn && yarn upgrade",
    "update:hard-all": "lerna run --parallel upgrade-hard",
    "env:sync": "cp .env.default .env && (set -o posix ; set) >> .env",
    "bootstrap": "lerna bootstrap && yarn env:sync && lerna run --scope *postgres start && echo '...waiting 30s for postgres' && sleep 30 && lerna run --parallel --ignore hookedjs bootstrap",
    "build": "lerna run --parallel --ignore hookedjs build",
    "start": "lerna run --parallel --ignore hookedjs start",
    "dev": "lerna run --parallel --ignore hookedjs dev",
    "test": "lerna run --parallel --ignore hookedjs test",
    "clean": "lerna run --parallel --ignore hookedjs clean",
    "prettier": "prettier ./services/*/src/**/*.ts --write",
    "lint": "tslint --fix -t stylish -c ./tslint.json -p ./tsconfig.json"
  },
  "engines": {
    "node": ">12.0.0",
    "npm": ">9999.0.0",
    "yarn": ">=1.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "dependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^8.0.0",
    "dotenv-cli": "^2.0.0",
    "dotenvi": "^0.5.1",
    "husky": "^2.2.0",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.6",
    "prettier": "^1.16.4",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.4.5",
    "typestrict": "^1.0.2"
  }
}
