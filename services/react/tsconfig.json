{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "esnext",
      "esnext.asynciterable"
    ],
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules/**/*",
    "generated/**/*",
    "tools/**/*"
  ],
  "include": [
    "src"
  ]
}
